extends layout_fluid

block sidebar
  div.form-group
    label(for="listRooms") Select the room you want to join
    select.form-control#listRooms(size=5)
    button.btn.btn-primary#refreshRooms Refresh
  div.form-group
    label(for="username") Your name
    input.form-control#username(type="text" placeholder="John")
  div.form-group
    button.center-block.btn.btn-success#enroll Enroll in the class

block content
  div.row
    div.col-md-6
      h3 Your stream
      div(style="height: 400px")#videoStream
    div.col-md-6
      h4 Other streams
      div(style="height: 400px")#smallerStreams

block additionaljs
  script(src="/javascripts/videoconference.js")
